manifest {
    mainScript = 'nCov.nf'
}

// default parameters
params {
    cores = "4"
    memory = '12'
    help = false
    profile = false

    // inputs
    fasta = ''
    fastq = ''
    references = ''
    dir = ''
    metadata = ''

    
    // databases

    // workflows
    artic_ncov19 = false
    augur = false
    mafft = false
    
    // settings
    primerV = 'V1'
    minLength = '400'
    maxLength = '700'
    maskBegin = '70'
    maskEnd = '70'

    // folder structure
    output = 'results'


}

profiles {
    local {
        workDir = "/tmp/nextflow-nCov-$USER"
        includeConfig 'configs/local.config'
    }
    
    docker {
        includeConfig 'configs/docker.config'
    }

    gcloud {
        params.cloudProcess = true
        workDir = "/tmp/nextflow-docker_pipelines-$USER"
        bucketDir = 'gs://nextflow-tmp-workdir/workdir-analysis'
        google {  project = 'nextflow-auto' ; zone = 'europe-west1-b' }
        cloud { preemptible = true }
        includeConfig 'configs/gcloud.config'
    }
}